pipeline {

    agent {
        node {
            label 'windows-agent'
        }
    }

    parameters {
        string(
            name: 'TARGET_ROOT',
            defaultValue: 'C:\\DesktopApp',
            description: 'Target base folder where application exists / should be deployed'
        )
    }

    environment {
        CHANGE_FILE = "changed_files.txt"
        TARGET_EXISTS = "false"
    }

    stages {

        stage('Checkout Source') {
            steps {
                checkout scm
            }
        }

        stage('Show Git Commit Details') {
            steps {
                bat '''
                echo ===== Current Commit =====
                git rev-parse HEAD
                git log -1 --oneline
                '''
            }
        }

        stage('Detect Changed Files') {
            steps {
                script {
                    bat """
                    git diff --name-only HEAD~1 HEAD > ${CHANGE_FILE}
                    """

                    def changes = readFile("${CHANGE_FILE}").trim()
                    if (!changes) {
                        error "No changed files detected. Nothing to deploy."
                    }

                    echo "Changed files detected:\n${changes}"
                }
            }
        }

        stage('Check Target Directory') {
            steps {
                script {
                    def status = bat(
                        script: """
                        powershell -NoProfile -ExecutionPolicy Bypass -Command ^
                        "if (Test-Path '${params.TARGET_ROOT}') { exit 0 } else { exit 1 }"
                        """,
                        returnStatus: true
                    )

                    if (status == 0) {
                        env.TARGET_EXISTS = "true"
                        echo "Target directory exists: ${params.TARGET_ROOT}"
                    } else {
                        env.TARGET_EXISTS = "false"
                        echo "Target directory does NOT exist: ${params.TARGET_ROOT}"
                    }
                }
            }
        }

        stage('Full Deploy (First Time)') {
            when {
                expression { env.TARGET_EXISTS == "false" }
            }
            steps {
                bat """
                echo FULL DEPLOYMENT STARTED...

                mkdir "${params.TARGET_ROOT}"

                powershell -NoProfile -ExecutionPolicy Bypass -Command ^
                "Copy-Item -Path .\\* -Destination '${params.TARGET_ROOT}' -Recurse -Force"
                """
            }
        }

        stage('Incremental Deploy (Changed Files Only)') {
            when {
                expression { env.TARGET_EXISTS == "true" }
            }
            steps {
                bat '''
                echo INCREMENTAL DEPLOYMENT STARTED...
                type changed_files.txt

                powershell -NoProfile -ExecutionPolicy Bypass -Command ^
                "Get-Content 'changed_files.txt' | ForEach-Object { ^
                    $rel = $_; ^
                    $src = Join-Path (Get-Location) $rel; ^
                    $dest = Join-Path '"${params.TARGET_ROOT}"' $rel; ^
                    $destDir = Split-Path $dest -Parent; ^

                    Write-Host ('Deploying: ' + $rel); ^
                    Write-Host ('Source   : ' + $src); ^
                    Write-Host ('Dest     : ' + $dest); ^

                    if (!(Test-Path $destDir)) { New-Item -ItemType Directory -Path $destDir -Force | Out-Null } ^
                    if (Test-Path $dest) { Remove-Item $dest -Force } ^
                    Copy-Item -Path $src -Destination $dest -Force ^
                }"
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment completed successfully to ${params.TARGET_ROOT}"
        }
        failure {
            echo "Deployment failed."
        }
    }
}
